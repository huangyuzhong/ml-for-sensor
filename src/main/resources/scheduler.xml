<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="MyDeviceStatusScheduleImp" class="com.device.inspect.config.schedule.MyDeviceStatusScheduleImp" />
  <bean id="CheckFinishDeal" class="com.device.inspect.config.schedule.CheckFinishDeal" />
  <bean id="HourlyUtilityCalculation" class="com.device.inspect.config.schedule.HourlyUtilityCalculation" />
  <bean id="ScanOfflineData" class="com.device.inspect.config.schedule.ScanOfflineData" />

  <!-- Quartz Job -->
  <bean name="MyDeviceStatusScheduleImpScheduler" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
    <property name="jobClass" value="com.device.inspect.config.schedule.MyDeviceStatusScheduleImp" />

  </bean>

  <bean name="CheckFinishDealScheduler" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
    <property name="jobClass" value="com.device.inspect.config.schedule.CheckFinishDeal" />

    <property name="jobDataAsMap">
      <map>
        <entry key="onchainService" value="com.device.inspect.common.service.OnchainService" />
        <entry key="dealRecordRepository" value="com.device.inspect.common.repository.record.DealRecordRepository" />
        <entry key="monitorDeviceRepository" value="com.device.inspect.common.repository.record.MonitorDeviceRepository" />
        <entry key="userRepository" value="com.device.inspect.common.repository.record.UserRepository" />
        <entry key="scientistDeviceRepository" value="com.device.inspect.common.repository.record.ScientistDeviceRepository" />
        <entry key="deviceOrderListRepository" value="com.device.inspect.common.repository.record.DeviceOrderListRepository" />
        <entry key="deviceInspectRepository" value="com.device.inspect.common.repository.record.DeviceInspectRepository" />
        <entry key="inspectTypeRepository" value="com.device.inspect.common.repository.record.InspectTypeRepository" />
      </map>
    </property>
  </bean>

  <bean name="HourlyUtilityCalculationScheduler" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
    <property name="jobClass" value="com.device.inspect.config.schedule.HourlyUtilityCalculation" />
  </bean>

  <bean name="ScanOfflineDataScheduler" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
    <property name="jobClass" value="com.device.inspect.config.schedule.ScanOfflineData" />
  </bean>

  <!-- Cron Trigger, run every 5 seconds -->
  <bean id="cronTriggerMyDeviceStatusScheduleImp"
                class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
    <property name="jobDetail" ref="MyDeviceStatusScheduleImpScheduler" />
    <property name="cronExpression" value="0 0/5 * * * ?" />
  </bean>

  <bean id="cronTriggerCheckFinishDeal"
                class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
    <property name="jobDetail" ref="CheckFinishDealScheduler" />
    <property name="cronExpression" value="30 * * * * ? " />
  </bean>

  <bean id="cronTriggerHourlyUtilityCalculation"
                class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
    <property name="jobDetail" ref="HourlyUtilityCalculationScheduler" />
    <property name="cronExpression" value="0 10 * * * ? " />
  </bean>

  <bean id="cronTriggerScanOfflineData"
                class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
    <property name="jobDetail" ref="ScanOfflineDataScheduler" />
    <property name="cronExpression" value="0 */10 * * * ? " />
  </bean>

  <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
    <property name="triggers">
      <list>
        <ref bean="cronTriggerMyDeviceStatusScheduleImp" />
        <ref bean="cronTriggerCheckFinishDeal" />
        <ref bean="cronTriggerHourlyUtilityCalculation" />
        <ref bean="cronTriggerScanOfflineData" />
      </list>
    </property>
  </bean>

</beans>