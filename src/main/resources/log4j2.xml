<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %msg%n" />
        </Console>

        <RollingFile name="RollingFile" filename="log/backend.log"
                     filepattern="log/%d{YYYYMMddHHmmss}-backup.log">
            <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>
        <SMTP name="Mail" subject="Error Log From ils-dev-backend-vm1" to="engineer@ilabservice.com" from="intelab@ilabservice.com"
              smtpHost="smtp.mxhichina.com" smtpPort="25" bufferSize="32" smtpUsername="intelab@ilabservice.com" smtpPassword="Service@001">
        </SMTP>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
        <Root level="error">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
            <AppenderRef ref="Mail" />
        </Root>
    </Loggers>
</Configuration>
